<!DOCTYPE html>
<html>
  <head>
    <title>みまもるくん</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    
    <!-- BootstrapのCSS読み込み -->
    <!--<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> 
     -->
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Google Analystics -->
    <%= analytics_init if Rails.env.production? %>
    <meta name="google-site-verification" content="_IEDyBg4Tk0s15k4o1Pr3bRGnq9gRJcTX7Kr2M5iHGQ" />
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if user_signed_in? %>
          <%= link_to("みまもるくん", "/posts/index") %>
        <% else %>
          <%= link_to("みまもるくん", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if  user_signed_in?%>  
          <li>
            <%= link_to("アカウント情報", "/users/#{current_user.id}") %>
          </li>
          
          <li>
            <%= link_to("監視サイト一覧", "/posts/index") %>
          </li>
          <li>
            <%= link_to("監視サイト登録", "/posts/new") %>
          </li>
          <!--<li>
            <%= link_to("ユーザー一覧", "/users/index") %>
          </li>
          -->
          <li>
            <%= link_to("ログアウト","/users/sign_out") %>
          </li>
          <!--<li>
            <%= link_to("管理人からのメッセージ","/voice") %>
          </li>
          -->
        <% else %>
          <li>
            <%= link_to("みまもるくんとは", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/users/sign_up") %>
          </li>
          <li>
            <%= link_to("ログイン", "/users/sign_in") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>